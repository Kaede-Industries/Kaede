<UserControl x:Class="Kaede.Views.UserRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kaede.Views"
             mc:Ignorable="d" 
             Background="White"
             FontSize="14"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" MinWidth="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0 0 0 25">RegisterControl</TextBlock>

        <StackPanel Grid.Row="1">
            <TextBlock>Username:</TextBlock>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock>Password:</TextBlock>
            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <TextBlock>Confirm Password:</TextBlock>
            <TextBox></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button Command="{Binding SubmitCommand}">
                Register
            </Button>
            <Button Command="{Binding NavigateLoginCommand}">
                Login Instead
            </Button>
        </StackPanel>
      
    </Grid>
</UserControl>
